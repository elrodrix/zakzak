{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": [
			"es2017"
		],
		"allowJs": false,
		"checkJs": false,
		"declaration": true,
		"sourceMap": true,
		"outDir": "./dist",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": false,
		"moduleResolution": "node",
		"baseUrl": "src",
		"paths": {
			"@zakzak/logging": [
				"exporter/logging"
			],
			"@zakzak/manager/*": [
				"manager/*"
			],
			"@zakzak/config/*": [
				"config/*"
			],
			"@zakzak/cli/*": [
				"cli/*"
			],
			"@zakzak/benchmark/*": [
				"benchmark/*"
			],
			"@zakzak/exporter/*": [
				"exporter/*"
			],
			"@util": [
				"util"
			],
			"@timeunit": [
				"time"
			],
			"@globals": [
				"manager/globals"
			]
		},
		"typeRoots": [
			"node_modules/@types",
			"types"
		],
		"esModuleInterop": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"types"
	]
}