{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": [
			"es2017"
		],
		"allowJs": false,
		"checkJs": false,
		"declaration": true,
		"sourceMap": true,
		"outDir": "./dist",
		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"strictNullChecks": false,
		"moduleResolution": "node",
		"typeRoots": [
			"node_modules/@types",
			"types"
		],
		"esModuleInterop": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"types"
	]
}